<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/layout_4dp"></corners>
            <solid android:color="@color/md_blue_500"></solid>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/layout_4dp"></corners>
            <stroke android:color="@color/md_blue_500" android:width="1dp"></stroke>
        </shape>
    </item>
</selector>
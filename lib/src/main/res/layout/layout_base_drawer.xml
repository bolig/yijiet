            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <FrameLayout
            android:id="@+id/fl_uishow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </FrameLayout>

</LinearLayout>
